.brand
  Ceraigslist

%ul.nav.pull-left
  %ul{class: 'nav'}
    %li= link_to 'Sale list',product_infos_path
    %li= link_to 'Post a new SALE!', new_product_info_path
%ul.nav.pull-right
  - if @current_user
    %ul{class: 'nav'}
      %li
        = link_to @current_user.email, '#', class: 'dropdown-toggle', :'data-toggle'=> 'dropdown'
        %ul{class: 'dropdown-menu'}
          %li
            = link_to edit_user_path(@current_user.id) do
              %i{class: 'icon-edit'}
              Edit    
          %li
            = link_to session_path(0), method: :delete do
              %i{class: 'icon-ban-circle'}
              Sign out
    
  - else
    = form_tag sessions_path, method: :post, class: 'navbar-form pull-right' do
      = text_field '', 'email', placeholder: 'Email' 
      = password_field '', 'password', placeholder: 'Password' 
      = submit_tag 'Sign in', class: 'btn'
      = link_to 'Sign up', new_user_path, class: 'btn'
