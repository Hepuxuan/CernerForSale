#new_user_form
  = form_for @user do |form|
    = form.text_field :email, placeholder: 'Your Email', required: true
    %br
    = form.password_field :password, placeholder: 'Your Password', required: true
    %br
    = form.password_field :password_confirmation, placeholder: 'Confirm Your Password', required: true
    %br
    = submit_tag 'Sign Up for Ceraigslist', class: 'btn btn-success'